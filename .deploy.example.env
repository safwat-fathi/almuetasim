## Copy this file to .deploy.env and fill values
## .deploy.env is git-ignored

# SSH host (domain or IP)
DEPLOY_HOST=

# SSH username
DEPLOY_USER=

# Absolute path to your app root on the server
# Example: /home/{user}/public_html/yourapp
DEPLOY_PATH=

# SSH port 
DEPLOY_PORT=

# === Optional / Safe Deploy Settings ===

# Whether to overwrite the server .htaccess file during deploy
# Default is "false" (safer for shared hosting)
# Set to "true" ONLY if you want to replace the existing .htaccess with your local version
OVERWRITE_HTACCESS=

# Run Laravel migrations after deployment (default: true)
# Set to "false" to skip database migrations
RUN_MIGRATIONS=

# Whether to clear and rebuild Laravel caches remotely (default: true)
RUN_OPTIMIZE=

# Optional health-check URL after deploy (the script can ping it later)
# e.g. HEALTH_URL="https://example.com/health"
HEALTH_URL=

# Custom SSH key (optional)
# e.g. DEPLOY_KEY="~/.ssh/id_rsa"
DEPLOY_KEY=